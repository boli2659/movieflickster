<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.movieapp.Details">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivMovieDetails"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Captain America: Civil War"
        android:id="@+id/tvTitleDetails"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivMovieDetails"
        android:layout_toEndOf="@+id/ivMovieDetails"/>

    <RatingBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/tvTitleDetails"
        android:layout_toRightOf="@+id/ivMovieDetails"
        android:layout_toEndOf="@+id/ivMovieDetails"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize=".01"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDetailsOverview"
        android:layout_below="@+id/ratingBar"
        android:layout_alignLeft="@+id/ratingBar"
        android:layout_alignStart="@+id/ratingBar"
        tools:text="We always knew they were coming back. Using recovered alien technology, the nations of Earth have collaborated on an immense defense program to protect the planet. But nothing can prepare us for the aliensâ€™ advanced and unprecedented force. Only the ingenuity of a few brave men and women can bring our world back from the brink of extinction."
        />
</RelativeLayout>
